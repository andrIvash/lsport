        .wrapper.wrapper_admin
            section.admin
                .admin__header
                    .admin__header-left
                        .admin__header-title Панель администрирования
                    .admin__header-right
                        a(href="#").admin__header-link Вернуться на сайт
                .tabs
                    .tabs__controls
                        - var items = ['Tab 1', 'Tab 2', 'Tab 3']
                        ul.tabs__list
                            each item in items
                                li.tabs__item
                                    a(href="#").tabs__link= item
                    .tabs__content
                        block content

        script(src='/js/plugins.admin.min.js')
        script(src='/js/main.min.js')


